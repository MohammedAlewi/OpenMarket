<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="product" type="com.example.openmarket.data.Product"/>
        <variable name="editController" type="com.example.openmarket.EditController"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".EditProductFragment">


        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="179dp"
                android:id="@+id/guideline28"/>
        <ImageView
                android:src="@drawable/profile"
                android:layout_width="123dp"
                android:layout_height="117dp"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.558" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline35" app:layout_constraintVertical_bias="1.0"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="98dp"
                android:id="@+id/guideline29"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="240dp"
                android:id="@+id/guideline30"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="286dp"
                android:id="@+id/guideline31"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="349dp"
                android:id="@+id/guideline32"/>
        <TextView
                android:text="Name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView10" app:layout_constraintEnd_toStartOf="@+id/guideline29"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline30" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline28" android:textAlignment="center"/>
        <TextView
                android:text="Type"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView11" app:layout_constraintEnd_toStartOf="@+id/guideline29"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline30" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline31" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textAlignment="center"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="408dp"
                android:id="@+id/guideline33"/>
        <TextView
                android:text="Amount"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView12" app:layout_constraintEnd_toStartOf="@+id/guideline29"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline32" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline31" android:textAlignment="center"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="499dp"
                android:id="@+id/guideline34"/>
        <TextView
                android:text="Price"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView13" app:layout_constraintEnd_toStartOf="@+id/guideline29"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline33" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline32" android:textAlignment="center"/>
        <TextView
                android:text="Description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView14" app:layout_constraintEnd_toStartOf="@+id/guideline29"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline33" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline34" android:textAlignment="center"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="140dp"
                android:id="@+id/guideline35"/>
        <TextView
                android:text="@{product.userName}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/edit_username" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline29" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline28"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline35"
                android:textAlignment="textEnd" android:textColor="@color/design_default_color_primary_dark"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:text="@{product.name}"
                android:ems="10"
                android:id="@+id/edit_name" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline29" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline28" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline30"/>
        <TextView
                android:text="@{product.type}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/edit_type" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline29" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline30"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline31"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="number"
                android:text="@{Integer.toString(product.amount)}"
                android:ems="10"
                android:id="@+id/edit_amount"
                app:layout_constraintStart_toStartOf="@+id/guideline29" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline31"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline32"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:text="@{product.description}"
                android:ems="10"
                android:id="@+id/edit_desc" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline29" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline33" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline34"/>
        <Button
                android:text="Save changes"
                android:layout_width="157dp"
                android:layout_height="42dp"
                android:onClick="@{() -> editController.saveChanges()}"
                android:id="@+id/save" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline29" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.321" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline34" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.255"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="numberDecimal"
                android:text="@{Double.toString(product.price)}"
                android:ems="10"
                android:id="@+id/edit_price"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline29" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline32"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline33"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>