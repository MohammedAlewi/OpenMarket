<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent" android:layout_width="match_parent"
        tools:context=".RegistrationFragment"
>


    <TextView
            android:text="Be Family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintEnd_toEndOf="@+id/user_profile_image"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/user_profile_image"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" tools:src="@tools:sample/avatars"
            android:id="@+id/user_profile_image"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/full_name"
            app:layout_constraintEnd_toEndOf="@+id/full_name" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintDimensionRatio="h,1:1"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="86dp"
            android:id="@+id/guideline15"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="260dp"
            android:id="@+id/guideline16"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="633dp"
            android:id="@+id/guideline17"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/full_name"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline16" android:hint="Full Name"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/user_name"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="@+id/guideline16"
            android:hint="Username" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:layout_marginTop="168dp" app:layout_constraintTop_toTopOf="@+id/guideline16"
            android:hint="Password" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirm_password"
            android:layout_marginTop="228dp" app:layout_constraintTop_toTopOf="@+id/guideline16"
            android:hint="Confirm Password" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email" android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="@+id/guideline16"
            android:hint="example@email.com" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"/>
    <Button
            android:text="SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register" app:layout_constraintEnd_toEndOf="@+id/confirm_password"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="60dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/confirm_password" android:textAllCaps="false"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline18" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline19" app:layout_constraintGuide_begin="390dp"
                                                android:orientation="vertical"/>
    <Button
            android:text="+"
            android:layout_width="59dp"
            android:layout_height="25dp"
            android:id="@+id/add_image"
            app:layout_constraintBottom_toBottomOf="@+id/user_profile_image"
            app:layout_constraintStart_toStartOf="@+id/user_profile_image"
            app:layout_constraintEnd_toEndOf="@+id/user_profile_image"
            android:background="@android:drawable/screen_background_dark_transparent"/>


</androidx.constraintlayout.widget.ConstraintLayout>