<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/constraintLayout">

    <TextView
            android:id="@+id/loginscrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="39dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="39dp" app:layout_constraintStart_toEndOf="@+id/fstTxt"/>
    <TextView
            android:id="@+id/fstTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            app:layout_constraintStart_toStartOf="@+id/txtEmail"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/txtEmail"/>
    <EditText
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/loginscrn"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/secTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            app:layout_constraintStart_toStartOf="@+id/txtEmail"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/txtPwd"/>
    <EditText
            android:id="@+id/txtPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="#00BB00"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/txtPwd"
            app:layout_constraintStart_toStartOf="@+id/txtPwd"
            android:layout_marginTop="44dp"/>
    <TextView
            android:text="don't have an account yet?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#3F51B5"
            android:id="@+id/toRegistration" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin" android:layout_marginTop="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
